style.
    /* base colors - ajusta se quiser */
    :root{
        --bg-footer: #0f1720;     /* fundo escuro */
        --muted: #98a0a6;
        --accent: #18c7d4;        /* ciano */
        --accent-2: #ff5e6d;      /* anel vermelho/pink */
    }

    /* footer */
    .site-footer { background: var(--bg-footer); color: #cbd5e1; border-top: 1px solid rgba(255,255,255,0.03); border-radius: 12px 12px 0 0; box-shadow: 0 -16px 40px rgba(2,6,23,0.7); }
    .site-footer .footer-title { color: #fff; font-weight: 600; margin-bottom: .6rem; }
    .site-footer .footer-links a { color: var(--muted); text-decoration: none; display: block; padding: 3px 0; }
    .site-footer .footer-links a:hover { color: #fff; text-decoration: underline; }

    /* icons */
    .footer-icon { opacity: .9; vertical-align: middle; color: var(--muted); }
    .socials a { color: var(--muted); }
    .socials a:hover { color: var(--accent); transform: translateY(-2px); transition: .15s; }

        /* CTA */
        .cta-title { color: #fff; font-weight: 700; }
        .btn-accent { background: linear-gradient(90deg, var(--accent) 0%, #12b3c3 100%); color: #081018; border: none; padding: .6rem 1.1rem; border-radius: 10px; box-shadow: 0 6px 18px rgba(24,199,212,0.08);}
        .btn-accent:hover { filter: brightness(.95); color: #fff; }

    /* small screens */
    @media (max-width: 767px) {
        .site-footer { border-radius: 0; }
        .btn-accent { width: 100%; }
        .text-md-end { text-align: start !important; }
    }

    /* hr custom */
    .site-footer hr { border-color: rgba(255,255,255,0.03); }
    .text-accent { color: var(--accent) !important; }
    .link-light { color: var(--muted); }
    .link-light:hover { color: #fff; }

